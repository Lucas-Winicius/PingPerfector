{
    "execMap": {
        "ts": "node --loader ts-node/esm --experimental-specifier-resolution=node -r tsconfig-paths/register"
    },
    "watch": [
        "index.ts", "src/**/*.ts"
    ],
    "ext": "ts",
    "ignore": [
        "node_modules",
        "*.test.ts"
    ],
    "verbose": true,
    "delay": "1000"
}